{
  "manifest_version": 2,
  "name": "Comment Anywhere",
  "description": "Get and post comments for any page.",
  "version": "0.5.0",
  
  "browser_action": {
    "default_icon": {
        "98": "icons/CA-Logo.png"
    },
    "default_area": "navbar",
    "default_title": "Comment Anywhere",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
] 
}
